# this input script tests if fix insert/pack/dense properly checks for an
# empty region


atom_style	granular
atom_modify	map array
boundary	f f f
newton		off

communicate	single vel yes
processors	1 1 1

units		si

region		reg block -1 1 -1 1 -1 1 units box
create_box	1 reg

neighbor	0.01 bin
neigh_modify	delay 0


#Material properties required for new pair styles

fix 		m1 all property/global youngsModulus peratomtype 5.e6
fix 		m2 all property/global poissonsRatio peratomtype 0.45
fix 		m3 all property/global coefficientRestitution peratomtypepair 1 0.9
fix 		m4 all property/global coefficientFriction peratomtypepair 1 0.05
fix 		m5 all property/global characteristicVelocity scalar 2.

#apply nve integration to all particles that are inserted as single particles
fix		integr all nve/sphere

#New pair style
pair_style gran model hertz tangential history #Hertzian without cohesion
pair_coeff	* *

timestep	0.00001

#fix		gravi all gravity 9.81 vector 0.0 0.0 -1.0

#particle distributions
fix		pts1 all particletemplate/sphere 1 atom_type 1 density constant 2500 radius constant 0.1

fix		pdd1 all particledistribution/discrete 1. 1 pts1 1.

# create an atom outside insreg1
create_atoms 1 single 0. 0.5 0.5 # should be outside
set group all diameter 0.2


region insreg1 sphere 0.5 0.5 0.5 0.3
fix ins_pack_dense1 all insert/pack/dense seed 123 region insreg1 distributiontemplate pdd1


#output settings, include total thermal energy
compute		1 all erotate/sphere
thermo_style	custom step atoms ke c_1 vol
thermo		1000
thermo_modify	lost ignore norm no
compute_modify	thermo_temp dynamic yes

# let insertion happen
run		5

# second insertion region
region insreg2 sphere -0.5 0.5 0.5 0.3

# create an atom inside insreg2
create_atoms 1 single -0.5 0.5 0.5 # should be inside sphere
group insreg2_group region insreg2
set group insreg2_group diameter 0.2


# this insertion should fail
fix ins_pack_dense2 all insert/pack/dense seed 123 region insreg2 distributiontemplate pdd1

run 5
